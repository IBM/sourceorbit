{
	"name": "vscode-sourceorbit",
	"description": "Object dependency management",
	"author": "IBM",
	"license": "MIT",
	"version": "1.2.2",
	"publisher": "IBM",
	"categories": ["Programming Languages", "Other"],
	"keywords": [
		"multi-root ready"
	],
	"repository": {
		"url": "https://github.com/IBM/sourceorbit/"
	},
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"extensionDependencies": [
		"vscode.git"
	],
	"main": "./out/extension",
	"contributes": {
		"taskDefinitions": [
			{
				"type": "sourceorbit",
				"required": [
					"builder"
				],
				"properties": {
					"builder": {
						"type": "string",
						"enum": [
							"bob",
							"make",
							"json"
						]
					}
				}
			}
		],
		"views": {
			"explorer": [
				{
					"id": "activeImpactView",
					"visibility": "collapsed",
					"name": "Affected Objects",
					"contextualTitle": "Active Editor",
					"when": "vscode-sourceorbit:projectsLoaded == true"
				}
			],
			"scm": [
				{
					"id": "gitImpactView",
					"visibility": "collapsed",
					"name": "Affected Objects",
					"contextualTitle": "Source Changes",
					"when": "vscode-sourceorbit:projectsLoaded == true"
				}
			]
		},
		"commands": [
			{
				"command": "vscode-sourceorbit.objects.loadProject",
				"category": "Source Orbit",
				"title": "Reload Project",
				"enablement": "vscode-sourceorbit:projectExplorerLoaded == true"
			},
			{
				"command": "vscode-sourceorbit.objects.autoFix",
				"category": "Source Orbit",
				"title": "Autofix",
				"enablement": "vscode-sourceorbit:projectExplorerLoaded == true"
			},
			{
				"command": "vscode-sourceorbit.objects.goToFile",
				"icon": "$(go-to-file)",
				"category": "Source Orbit",
				"title": "Go to file"
			},
			{
				"command": "vscode-sourceorbit.generateBuildFile",
				"category": "Source Orbit (API)",
				"title": "Generate Build File"
			},
			{
				"command": "vscode-sourceorbit.autoFix",
				"category": "Source Orbit (API)",
				"title": "Autofix"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "vscode-sourceorbit.generateBuildFile",
					"when": "never"
				},
				{
					"command": "vscode-sourceorbit.autoFix",
					"when": "never"
				},
				{
					"command": "vscode-sourceorbit.objects.loadProject",
					"when": "never"
				},
				{
					"command": "vscode-sourceorbit.objects.autoFix",
					"when": "never"
				},
				{
					"command": "vscode-sourceorbit.objects.goToFile",
					"when": "never"
				}
			],
			"view/item/context": [
				{
					"command": "vscode-sourceorbit.objects.goToFile",
					"when": "viewItem == ileObject",
					"group": "inline"
				},
				{
					"command": "vscode-sourceorbit.objects.loadProject",
					"when": "viewItem == objectsView",
					"group": "inline"
				},
				{
					"command": "vscode-sourceorbit.objects.autoFix",
					"when": "viewItem == objectsView",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run webpack",
		"package": "vsce package",
		"compile": "tsc -b",
		"clean": "rimraf out && rimraf client/out && rimraf server/out",
		"webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd ../cli && npm install && npm run webpack && cd ../vs && cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.18.41",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"eslint": "^8.35.0",
		"merge-options": "^3.0.4",
		"mocha": "^9.2.1",
		"typescript": "^5.1.3",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4",
		"esbuild-loader": "^4.0.0",
		"rimraf": "^5.0.1"
	}
}
